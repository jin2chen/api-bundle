{
    "name": "jin2chen/api-bundle",
    "type": "symfony-bundle",
    "description": "API bundle for symfony",
    "keywords": [
        "api",
        "symfony"
    ],
    "homepage": "https://www.jinchen.me/",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/jin2chen/api-bundle/issues?state=open",
        "source": "https://github.com/jin2chen/api-bundle"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "psr/log": "^1.1",
        "ramsey/uuid": "^4.1",
        "samj/fractal-bundle": "^4.0",
        "symfony/framework-bundle": "^5.0",
        "symfony/monolog-bundle": "^3.7"
    },
    "require-dev": {
        "jin2chen/phpcs-phar": "^3.6",
        "phpro/grumphp-shim": "^1.3",
        "phpunit/phpunit": "^9.5",
        "psalm/phar": "~5.7.5",
        "spatie/phpunit-watcher": "^1.23",
        "symfony/browser-kit": "^5.3",
        "symfony/dotenv": "^5.3",
        "symfony/stopwatch": "^5.3"
    },
    "autoload": {
        "psr-4": {
            "jin2chen\\ApiBundle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "jin2chen\\ApiBundle\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction --colors",
        "test-watch": "phpunit-watcher watch"
    }
}
